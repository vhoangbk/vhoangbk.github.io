{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "node vercel-build.js",
  "builds": [
    { "src": "index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/upload-stream", "dest": "/index.js" },
    { "src": "/converted_files/(.*)", "dest": "/index.js" },
    { 
      "src": "/dist/public/(.*\\.css)", 
      "dest": "/dist/public/$1"
    },
    { 
      "src": "/dist/public/(.*)", 
      "dest": "/dist/public/$1"
    },
    { "src": "/(.*)", "dest": "/index.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  }
}