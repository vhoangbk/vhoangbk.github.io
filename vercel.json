{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "node vercel-build.js",
  "builds": [
    { "src": "/dist/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/upload-stream", "dest": "/dist/index.js" },
    { "src": "/converted_files/(.*)", "dest": "/dist/index.js" },
    {
      "src": "/dist/public/(.*\\.css)",
      "dest": "/dist/public/$1",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/dist/public/(.*)",
      "dest": "/dist/public/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable no-cache"
      }
    },
    { "src": "/(.*)", "dest": "/dist/index.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  }
}